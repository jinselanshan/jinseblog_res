	</resultMap>
	<select id="findAllArticleByUserId" parameterType="int"
		resultMap="UserWithBlogResult">
		select u.*,b.*,a.*
		from user u,blog b,article a
		where
		u.user_id = #{userId,jdbcType=INTEGER}
		and u.user_id = b.user_id
		and
		b.blog_id = a.blog_id
		order by b.create_at desc
	</select>

